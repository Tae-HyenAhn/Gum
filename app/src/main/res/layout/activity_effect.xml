<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_effect"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.ggum.gum.activity.EffectActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="97dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <me.ggum.gum.view.HoverImageButton
                android:layout_width="24dp"
                android:id="@+id/effect_back"
                android:background="@android:color/transparent"
                android:src="@drawable/common_back_btn"
                android:layout_height="46dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <me.ggum.gum.view.HoverImageButton
                android:layout_width="54dp"
                android:id="@+id/effect_sound_switch"
                android:background="@android:color/transparent"
                android:src="@drawable/effect_sound_on_state"
                android:layout_height="44dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <me.ggum.gum.view.HoverImageButton
                android:layout_width="50dp"
                android:id="@+id/effect_complete"
                android:background="@android:color/transparent"
                android:src="@drawable/common_complete_btn"
                android:layout_height="44dp" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <android.opengl.GLSurfaceView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:id="@+id/effect_glsurface" />

        <me.ggum.gum.view.EffectControlView
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:id="@+id/effect_time_control_view" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="183dp">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="183dp"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="183dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_00"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Original"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_00"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_01"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Left and Right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_01"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_02"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Crop In and Out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_02"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_03"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Zoom In and Out"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_03"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_04"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Zoom In moving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_04"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="171dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="2dp"
                    android:layout_width="150dp"
                    android:gravity="center_horizontal">

                    <ImageButton
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        app:srcCompat="@color/gumPink"
                        android:id="@+id/effect_effect_05"
                        android:background="@android:color/transparent" />

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="130dp"
                        android:layout_height="41dp"
                        android:gravity="center">

                        <TextView
                            android:text="Rolling!"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/effect_effect_text_05"
                            android:textColor="@android:color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>
